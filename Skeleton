import java.awt.Image;
import javax.swing.ImageIcon;

public class Skeleton {
	public int xcoord;
	public int ycoord;
	Image Skeleton;

	public Skeleton() {
		super();
		ImageIcon i = new ImageIcon(this.getClass().getResource("Skeleton.png"));
		Skeleton = i.getImage();
		xcoord = 500;
		ycoord = 500;
	}

	public void move(int X, int Y) {
		if (X > xcoord) {
			xcoord++;
		}
		if (X < xcoord) {
			xcoord--;
		}
		if (Y > ycoord) {
			ycoord++;
		}
		if (Y < ycoord) {
			ycoord--;
		}
	}

	public int getX() {
		return xcoord;
	}

	public int getY() {
		return ycoord;
	}

	public Image getImage() {
		return Skeleton;
	}
}
